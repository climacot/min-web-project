<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - min_web_project_v2</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> *@
    @* <link rel="stylesheet" href="~/min_web_project_v2.styles.css" asp-append-version="true" /> *@
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <header class="flex bg-green-800">
        <nav class="flex bg-white/30 text-white cursor-pointer">
            <a href="/" class="border-r p-4 px-4 hover:bg-green-800">Bienvenida</a>
            <a href="/login" class="px-4 p-4 border-r hover:bg-green-800">Iniciar Sesión</a>
        </nav>
    </header>

    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class='bg-white border-t mt-12'>
            <div class='container mx-auto flex flex-col md:flex-row md:justify-between py-8 gap-4 px-2'>
                <div>El sena</div>
                <div class='flex flex-col gap-4'>
                    <a href="/">Inicio</a>
                    <a href="/login">Iniciar Sesión</a>
                    <div>Terminos de uso</div>
                </div>
                <div>Politicas de privacidad</div>
                <div>Cambiar de idioma</div>
            </div>
        </div>
    </footer>

    @* <script src="~/lib/jquery/dist/jquery.min.js"></script> *@
    @* <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
    @* <script src="~/js/site.js" asp-append-version="true"></script> *@
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
