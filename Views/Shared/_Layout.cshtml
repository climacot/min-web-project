<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sena</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <header class="flex bg-gray-200">
        <nav class="flex text-black cursor-pointer">
            <a href="/" class="p-4 border-r border-orange-500  hover:bg-gray-300">Inicio</a>
            <a href="/login" class="p-4 border-r border-orange-500 hover:bg-gray-300">Iniciar Sesión</a>
        </nav>
    </header>

    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class='bg-white border-t mt-12'>
            <div class='container mx-auto flex flex-col md:flex-row md:justify-between py-8 gap-4 px-2'>
                <div>El sena</div>
                <div class='flex flex-col gap-4'>
                    <a href="/">Inicio</a>
                    <a href="/login">Iniciar Sesión</a>
                    <div>Terminos de uso</div>
                </div>
                <div>Politicas de privacidad</div>
                <div>Cambiar de idioma</div>
            </div>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
