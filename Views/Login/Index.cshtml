@model min_web_project_v2.Models.Credentials

@{
  ViewData["Title"] = "Inicio de sesión";
}

<div class="min-h-full">
  <div class="grid grid-cols-4 md:grid-cols-4">
    <div class="col-span-0 md:col-span-3 hidden md:block relative">
      <div class="absolute flex justify-center items-center bottom-0 top-0 p-8 bg-gradient-to-r from-black/60">
        <p class="text-4xl font-semibold text-white/90 p-4">El SENA, es un establecimiento público del orden nacional,
          con personería jurídica, patrimonio propio e independiente y autonomía administrativa; adscrito al ministerio
          de trabajo en Colombia</p>
      </div>
      <img class="w-full min-h-screen object-cover" src="public/banner.jpg" />
    </div>
    <div class="col-span-4 md:col-span-1 flex flex-col justify-around items-center p-8">
      <div class="flex justify-center items-center py-8">
        <img class="h-[80px] w-[80px] md:h-[100px] md:w-[100px]"
          src="https://www.sena.edu.co/es-co/PublishingImages/sena%20logo.png" />
      </div>
      <form asp-action='Login' class="flex gap-12 flex-col mb-20">
        <h1 class="font-semibold text-3xl">Iniciar sesión</h1>
        <p class="text-gray-400">SENA una entidad de formación profesional al alcance de todos.</p>
        <input autocomplete="email" type="email" asp-for='Email'
          class="py-4 px-2 outline-none border-b focus:border-b-2 focus:border-black" required placeholder="Correo" />
        <input type="password" asp-for='Password'
          class="py-4 px-2 outline-none border-b focus:border-b-2 focus:border-black" required
          placeholder="Contraseña" />
        <input class="bg-black text-white text-center p-4 rounded-md font-semibold hover:opacity-80 cursor-pointer"
          type="submit" value="Entrar" title="Iniciar sesion" />
      </form>
    </div>
  </div>
</div>