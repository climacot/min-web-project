@model min_web_project_v2.Models.TeacherInformationModel

@{
    ViewData["Title"] = "Docente";
    Layout = "/Views/Shared/_LayoutTeacher.cshtml";
}

<body>
    <div class="flex flex-col justify-center mx-16 my-16 text-center">
        <h1 class="font-bold">Informaci√≥n personal:</h1>
        <h2>Nombre: @Model.UserModel.Name</h2>
        <h2>Tipo de profesor: @Model.UserModel.TypeOfTeaching</h2>
        <h2>Tipo de contrato: @Model.UserModel.TypeOfContract</h2>
        <h2>Area: @Model.UserModel.Area</h2>
    </div>

