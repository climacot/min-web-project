@model IEnumerable<min_web_project_v2.Models.EnvironmentModel>

@{
    ViewData["Title"] = "Leer Ambientes";
    Layout = "/Views/Shared/_LayoutCoordinator.cshtml";
}

<body>
    <div class="flex justify-center mx-16 my-16">
        <table>
            <thead>
                <tr>
                    <th class="border border-gray-500 px-4 py-2">Nombre</th>
                    <th class="border border-gray-500 px-4 py-2">Tipo</th>
                    <th class="border border-gray-500 px-4 py-2">Capacidad</th>
                    <th class="border border-gray-500 px-4 py-2">Ubicaci√≥n</th>
                    <th class="border border-gray-500 px-4 py-2">Estado</th>
                </tr>
            </thead>
            <tbody>
                @foreach (EnvironmentModel item in Model)
                {
                    <tr>
                        @* <td>
                            @Html.DisplayFor(modelItem => item.id)
                            </td> *@
                        <td class="border border-gray-500 px-4 py-2">
                            @Html.DisplayFor(modelItem => item.name)
                        </td>
                        <td class="border border-gray-500 px-4 py-2">
                            @Html.DisplayFor(modelItem => item.type)
                        </td>
                        <td class="border border-gray-500 px-4 py-2">
                            @Html.DisplayFor(modelItem => item.capacity)
                        </td>
                        <td class="border border-gray-500 px-4 py-2">
                            @Html.DisplayFor(modelItem => item.location)
                        </td>
                        <td class="border border-gray-500 px-4 py-2">
                            @Html.DisplayFor(modelItem => item.state)
                        </td>
                        <td class="border border-gray-500 px-4 py-2">
                            <a asp-action="Update" asp-route-id="@item.id">Edit</a>
                        </td>
                        @* <td>
                            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
                            </td> *@
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
